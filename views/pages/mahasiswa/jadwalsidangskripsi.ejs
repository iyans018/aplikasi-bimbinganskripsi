<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head') %>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <%- include('../../partials/sidebar.ejs') %> 
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Top Bar (Navbar) -->
                <%- include('../../partials/topbar') %> 
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                      <h1 class="h3 mb-0 text-gray-800"><%= title %> </h1>
                      <p><i class="<%= icon %> "></i> <span><%= title %></span></p>
                    </div>

                    <!-- Content -->
                    <div class="row">
                      <div class="col">
                        <% if (pengujian) { %>
                          <% if (pengujian.status === "Diterima") { %>
                            <table class="table table-sm">
                              <thead class="thead-light">
                                <tr>
                                  <th scope="col">Judul</th>
                                  <th scope="col">Nilai</th>
                                </tr>
                              </thead>
                              <tbody>
                                <tr>
                                  <td><b>Nim Mahasiswa</b></td>
                                  <td><%= pengujian.nimMhs.username %> </td>
                                </tr>
                                <tr>
                                  <td><b>Nama Mahasiswa</b></td>
                                  <td><%= pengujian.namaMhs %> </td>
                                </tr>
                                <tr>
                                  <td><b>Judul Skripsi</b></td>
                                  <td><%= pengujian.judulSkripsi %> </td>
                                </tr>
                                <tr>
                                  <td><b>Penguji 1</b></td>
                                  <td><%= pengujian.penguji1.nama %> </td>
                                </tr>
                                <tr>
                                  <td><b>Penguji 2</b></td>
                                  <td><%= pengujian.penguji2.nama %> </td>
                                </tr>
                                <tr>
                                  <td><b>Tempat Pengujian</b></td>
                                  <td><%= pengujian.tempatPengujian %> </td>
                                </tr>
                                <tr>
                                  <td><b>Tanggal Pelaksanaan</b></td>
                                  <td>
                                    <% let date = new Date(pengujian.tglPelaksanaan); %>
                                    <%= date.toDateString() %> 
                                  </td>
                                </tr>
                                <tr>
                                  <td><b>Sesi Pengujian</b></td>
                                  <td><%= pengujian.waktuPengujian %> </td>
                                </tr>
                              </tbody>
                            </table>
                            <p><b>Keterangan : </b> <%= pengujian.keterangan %></p>
                          <% } else { %>
                            <p>Pengajuan anda masih belum disetujui oleh Prodi.</p>
                          <% } %> 
                        <% } else { %>
                          <p>Anda belum melengkapi persyaratan.</p>
                        <% } %> 
                      </div>
                    </div>

                </div>
            </div>
            <!-- Footer -->
            <%- include('../../partials/footer') %> 
        </div>
        <!-- End of Content Wrapper -->
    </div>

    <!-- Scroll to Top Button-->
    <%- include('../../partials/scrolltotop') %> 
    <!-- Logout Modal-->
    <%- include('../../partials/modalLogout') %> 
    <!-- Script -->
    <%- include('../../partials/script') %> 
</body>
</html>