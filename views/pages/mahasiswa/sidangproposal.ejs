<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head') %>
<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include('../../partials/sidebar.ejs') %> 
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Top Bar (Navbar) -->
        <%- include('../../partials/topbar') %> 
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
              <h1 class="h3 mb-0 text-gray-800"><%= title %> </h1>
              <p><i class="<%= icon %> "></i> <span><%= title %></span></p>
            </div>

            <!-- Content -->
            <div class="row">
              <div class="col">
                <% if (proposal) { %>
                  <% if (proposal.status === "Diterima") { %>
                    <table class="table table-sm">
                      <thead class="thead-light">
                        <tr>
                          <th scope="col">Judul</th>
                          <th scope="col">Nilai</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td><b>Nim Mahasiswa</b></td>
                          <td><%= proposal.nimMhs.username %> </td>
                        </tr>
                        <tr>
                          <td><b>Nama Mahasiswa</b></td>
                          <td><%= proposal.namaMhs %> </td>
                        </tr>
                        <tr>
                          <td><b>Judul Proposal</b></td>
                          <td><%= proposal.judul %> </td>
                        </tr>
                        <tr>
                          <td><b>Penguji 1</b></td>
                          <td><%= proposal.penguji1.nama %> </td>
                        </tr>
                        <tr>
                          <td><b>Penguji 2</b></td>
                          <td><%= proposal.penguji2.nama %> </td>
                        </tr>
                        <tr>
                          <td><b>Tempat Pengujian</b></td>
                          <td><%= proposal.tempatPengujian %> </td>
                        </tr>
                        <tr>
                          <td><b>Tanggal Pelaksanaan</b></td>
                          <td>
                            <% let date = new Date(proposal.tglPelaksanaan); %>
                            <%= date.toDateString() %> 
                          </td>
                        </tr>
                        <tr>
                          <td><b>Sesi Pengujian</b></td>
                          <td><%= proposal.waktuPengujian %> </td>
                        </tr>
                      </tbody>
                    </table>
                    <p><b>Keterangan : </b> <%= proposal.keterangan %></p>
                  <% } else { %>
                    <p>Proposal anda masih belum diproses atau ditolak.</p>
                  <% } %> 
                <% } else { %>
                  <p>Proposal anada belum di proses atau anda belum mengajukan proposal.</p>
                <% } %> 
              </div>
            </div>
        </div>
      </div>
      <!-- Footer -->
      <%- include('../../partials/footer') %> 
    </div>
    <!-- End of Content Wrapper -->
  </div>

  <!-- Scroll to Top Button-->
  <%- include('../../partials/scrolltotop') %> 
  <!-- Logout Modal-->
  <%- include('../../partials/modalLogout') %> 
  <!-- Script -->
  <%- include('../../partials/script') %> 
</body>
</html>