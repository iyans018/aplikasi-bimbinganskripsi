<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head') %>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <%- include('../../partials/sidebar.ejs') %> 
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Top Bar (Navbar) -->
                <%- include('../../partials/topbar') %> 
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800"><%= title %> </h1>
                        <p><i class="<%= icon %> "></i> <span><%= title %></span></p>
                    </div>

                    <!-- Content -->
                    <div class="row">
                        <div class="col">
                            <form action="/mahasiswa/profile" id="form-profile">
                                <input type="hidden" name="idMhs" value="<%= mahasiswa._id %>">
                                <div class="row">
                                    <div class="form-group col-4">
                                        <label for="nim"><b>NIM</b></label>
                                        <input type="hidden" name="nim" value="<%= mahasiswa.nim._id %>">
                                        <input type="text" name="nimMhs" value="<%= mahasiswa.nim.username %>" class="form-control" readonly>
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="nama"><b>Nama Mahasiswa</b></label>
                                        <input name="nama" type="text" value="<%= mahasiswa.nama %>" class="form-control" readonly>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-4">
                                        <label for="tempatLahir"><b>Tempat Lahir</b></label>
                                        <input name="tempatLahir" type="text" value="<%= mahasiswa.tempatLahir %>" class="form-control">
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="tglLahir"><b>Tanggal Lahir</b></label>
                                        <input name="tglLahir" type="text" value="<%= mahasiswa.tglLahir %>" class="form-control">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-3">
                                        <label for="noPonsel"><b>Nomor Ponsel</b></label>
                                        <input name="noPonsel" type="text" value="<%= mahasiswa.noPonsel %>" class="form-control">
                                    </div>
                                    <div class="form-group col-7">
                                        <label for="email"><b>Email</b></label>
                                        <input name="email" type="email" value="<%= mahasiswa.email %>" class="form-control">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-5">
                                        <label for="kelamin"><b>Jenis Kelasmin</b></label>
                                        <select name="kelamin" class="form-control">
                                            <% if (mahasiswa.kelamin === "L") { %>
                                                <option value="L">Laki-laki</option>
                                                <option value="P">Perempuan</option>
                                            <% } else { %>
                                                <option value="P">Perempuan</option>
                                                <option value="L">Laki-laki</option>
                                            <% } %> 
                                        </select>
                                    </div>
                                    <div class="form-group col-5">
                                        <label for="agama"><b>Agama</b></label>
                                        <select name="agama" class="form-control">
                                            <option value="<%= mahasiswa.agama %>"><%= mahasiswa.agama %></option>
                                            <option value="Islam">Islam</option>
                                            <option value="Kristen">Kristen</option>
                                            <option value="Hindu">Hindu</option>
                                            <option value="Buddha">Budha</option>
                                            <option value="Konghucu">Konghcu</option>
                                            <option value="Lainnya">Lainnya</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-2">
                                        <label for="fakultas"><b>Fakultas</b></label>
                                        <select name="fakultas" class="form-control">
                                            <option value="<%= mahasiswa.fakultas %>"><%= mahasiswa.fakultas %></option>
                                            <option value="Teknik">Teknik</option>
                                            <option value="Hukum">Hukum</option>
                                            <option value="Sastra">Sastra</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-4">
                                        <label for="prodi"><b>Program Studi</b></label>
                                        <select name="prodi" class="form-control">
                                            <option value="<%= mahasiswa.prodi %>"><%= mahasiswa.prodi %></option>
                                            <option value="Teknik Informatika">Teknik Informatika</option>
                                            <option value="Manajemen">Menejemen</option>
                                            <option value="Akuntansi">Akuntansi</option>
                                            <option value="Teknik Mesin">Teknik Mesin</option>
                                            <option value="Hukum">Hukum</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-4">
                                        <label for="kelas"><b>Kelas</b></label>
                                        <input type="text" name="kelas" class="form-control" value="<%= mahasiswa.kelas %>">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Update</button>
                            </form>
                        </div>                       
                    </div>

                </div>
            </div>
            <!-- Footer -->
            <%- include('../../partials/footer') %> 
        </div>
        <!-- End of Content Wrapper -->
    </div>

    <!-- Scroll to Top Button-->
    <%- include('../../partials/scrolltotop') %> 
    <!-- Logout Modal-->
    <%- include('../../partials/modalLogout') %> 
    <!-- Script -->
    <%- include('../../partials/script') %>
    <script>
        const form = document.querySelector('#form-profile');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const id = form.idMhs.value;
            const nim = form.nim.value;
            const nama = form.nama.value;
            const tempatLahir = form.tempatLahir.value;
            const tglLahir = form.tglLahir.value;
            const noPonsel = form.noPonsel.value
            const email = form.email.value;
            const kelamin = form.kelamin.value;
            const agama = form.agama.value;
            const fakultas = form.fakultas.value;
            const prodi = form.prodi.value;
            const kelas = form.kelas.value;

            const res = await fetch('/mahasiswa/profile', {
                method: 'put',
                body: JSON.stringify({ id, nim, nama, tempatLahir, tglLahir, noPonsel, 
                    email, kelamin, agama, fakultas, prodi, kelas }),
                headers: { 'Content-Type': 'application/json' }
            });
            const data = await res.json();
            if (data.mhs) {
                swal('Berhasil memperbaharui data mahasiswa.')
                .then(() => location.assign('/mahasiswa/profile'));
            } else if (data.error) {
                swal(data.error)
            } else {
                swal('Terjadi Kesalahan!');
            }
        });
    </script>
</body>
</html>